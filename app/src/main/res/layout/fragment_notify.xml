<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NotifyFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87sp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:elevation="10dp"
        android:background="@drawable/bg_function">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="47sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/notify"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_notify_apps"
                android:layout_width="205sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/silver">
                <TextView
                    android:id="@+id/tv_notify_apps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/apps"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_notify_user"
                android:layout_width="205dp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_notify_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_function"
        android:elevation="6dp">

        <LinearLayout
            android:id="@+id/layout_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>
